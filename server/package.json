{
  "name": "medicalstandard-server",
  "version": "0.1.0",
  "description": "Node/Express API for Hanbang App",
  "scripts": {
    "build": "prisma generate && tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:seed": "prisma db seed",
    "postinstall": "prisma generate",
    "prebuild": "cd .. && git lfs pull || echo 'Git LFS not available, skipping postal code DB download'",
    "setup": "cd .. && git lfs install && git lfs pull"
  },
  "dependencies": {
    "@prisma/client": "^5.20.0",
    "@sendgrid/mail": "^7.7.0",
    "@types/node": "^24.10.1",
    "@types/ws": "^8.18.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "ws": "^8.18.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.25",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.10",
    "prisma": "^5.20.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": "20.x"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
